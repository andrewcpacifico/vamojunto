<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    tools:context="co.vamojunto.SearchPlaceActivity$PlaceholderFragment">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_pesquisa"

        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/caixa_pesquisa"
            android:layout_below="@+id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="8dp" >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_search"/>

            <EditText
                android:id="@+id/local_edit_text"

                android:background="#00000000"
                android:dropDownHeight="0dp"
                android:dropDownWidth="0dp"
                android:hint="@string/type_addr_location"
                android:singleLine="true"
                android:textSize="16sp"
                android:layout_weight="1"

                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_search"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_lista"

                android:layout_below="@+id/card_pesquisa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                card_view:cardCornerRadius="4dp">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/my_recycler_view"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.v7.widget.CardView>

</RelativeLayout>