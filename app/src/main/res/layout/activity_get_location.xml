<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="co.vamojunto.ui.activities.GetLocationActivity">
    <include
        layout="@layout/tool_bar"
        android:id="@+id/tool_bar" />

    <LinearLayout
        android:id="@+id/caixa_pesquisa"
        android:layout_below="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_search"/>

        <AutoCompleteTextView
            android:id="@+id/local_auto_complete"

            android:background="#00000000"
            android:dropDownHeight="0dp"
            android:dropDownWidth="0dp"
            android:focusable="false"
            android:hint="@string/type_addr_location"
            android:textSize="18sp"

            android:layout_height="wrap_content"
            android:layout_width="fill_parent" />
    </LinearLayout>
    <View
        android:id="@+id/separador"

        android:layout_below="@id/caixa_pesquisa"
        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/separator"
        />

    <FrameLayout
        android:id="@+id/container"

        android:layout_below="@+id/separador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>
    <RelativeLayout
        android:layout_below="@+id/separador"
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:id="@+id/img_pin"

            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"

            android:paddingBottom="30dp"

            android:src="@drawable/ic_pin_dest"/>
    </RelativeLayout>        

    <Button
        android:id="@+id/ok_button"

        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="0dp"
        android:padding="0dp"
        android:text="@string/save"
        android:textColor="@color/white"
        style="@style/Save.Button"
        />
</RelativeLayout>
