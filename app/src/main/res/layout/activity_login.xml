<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.vamojunto.ui.activities.MainActivity$PlaceholderFragment"
    android:background="#ffffffff">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="280dp"
        android:layout_height="112dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/dark_logo"/>

    <TextView
        android:id="@+id/texto_text_view"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/welcome_string_text"
        android:textColor="#ff000000"
        android:textSize="@dimen/abc_text_size_small_material"
        />

    <Button
        android:id="@+id/fb_auth_button"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        android:background="@drawable/facebook_login_button_background_selector"
        android:drawableLeft="@drawable/facebook_login_logo"
        android:text="@string/signin_fb"
        style="@style/Login.Button.ThirdPartyLogin"
        />


</RelativeLayout>
